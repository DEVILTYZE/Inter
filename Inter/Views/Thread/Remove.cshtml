@model Thread

@{
    ViewBag.Title = "Удаление";
    Layout = "_Layout";
}

<h1 class="display-3">@ViewBag.Title</h1>

<div>
    <div>Вы действительно хотите удалить тред "@Model.Name"?</div>
    <form asp-action="Remove" method="post">
        <input asp-for="BoardId" type="hidden" name="boardId" />
        <input asp-for="Id" type="hidden" name="id" />
        <input type="submit" value="Удалить" />
        <a asp-action="ViewList" asp-route-boardId="@Model.BoardId">Отмена</a>
    </form>
</div>